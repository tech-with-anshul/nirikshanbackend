            }
          }
        },
        {
          "name": "Reject Request",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"REJECTED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/parent/requests/{{requestId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["parent", "requests", "{{requestId}}", "status"]
            }
          }
        }
      ]
    },
