{
  "info": {
    "name": "Nirikshan Dormitory Management API",
    "description": "Complete API collection for the Nirikshan Dormitory Management System with OTP authentication, messaging, and enhanced request management",
    "version": "2.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/send-otp",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "send-otp"]
            }
          }
        },
        {
          "name": "Verify OTP & Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-otp"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"receiverId\": \"user-id-here\",\n  \"subject\": \"Dormitory Issue\",\n  \"content\": \"I wanted to discuss about the room heating issue.\",\n  \"type\": \"PARENT_WARDEN\",\n  \"priority\": \"NORMAL\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["messages"]
            }
          }
        },
        {
          "name": "Reply to Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"receiverId\": \"user-id-here\",\n  \"subject\": \"Re: Dormitory Issue\",\n  \"content\": \"Thank you for bringing this to my attention. I'll look into it.\",\n  \"type\": \"WARDEN_PARENT\",\n  \"priority\": \"NORMAL\",\n  \"threadId\": \"thread-id-here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["messages"]
            }
          }
        },
        {
          "name": "Get Message Threads",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/messages/threads",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "threads"]
            }
          }
        },
        {
          "name": "Get Thread Messages",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/messages/threads/{{threadId}}",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "threads", "{{threadId}}"]
            }
          }
        },
        {
          "name": "Mark Message as Read",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{baseUrl}}/messages/{{messageId}}/read",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "{{messageId}}", "read"]
            }
          }
        },
        {
          "name": "Get Authorized Contacts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/messages/contacts",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "contacts"]
            }
          }
        },
        {
          "name": "Get Unread Count",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/messages/unread-count",
              "host": ["{{baseUrl}}"],
              "path": ["messages", "unread-count"]
            }
          }
        }
      ]
    },
    {
      "name": "Student APIs",
      "item": [
        {
          "name": "Get Student Dashboard",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/student/dashboard",
              "host": ["{{baseUrl}}"],
              "path": ["student", "dashboard"]
            }
          }
        },
        {
          "name": "Get Student Requests",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/student/requests?includeHistory=true",
              "host": ["{{baseUrl}}"],
              "path": ["student", "requests"],
              "query": [
                {
                  "key": "includeHistory",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Create Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"LATE\",\n  \"reason\": \"Family emergency\",\n  \"expectedBack\": \"2024-01-15T22:00:00.000Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/student/requests",
              "host": ["{{baseUrl}}"],
              "path": ["student", "requests"]
            }
          }
        },
        {
          "name": "Create Go Home Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"GO_HOME\",\n  \"reason\": \"Family function\",\n  \"expectedBack\": \"2024-01-20T18:00:00.000Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/student/requests",
              "host": ["{{baseUrl}}"],
              "path": ["student", "requests"]
            }
          }
        }
      ]
    },
