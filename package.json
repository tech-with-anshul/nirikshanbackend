{
  "name": "dorm-manager-server",
  "version": "1.0.0",
  "description": "Dorm Management System Server",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "npm i && npx prisma generate && tsc",
    "postinstall": "npx prisma generate",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:deploy": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "db:clearschemawithdata": "tsx src/scripts/clearSchemaWithData.ts",
    "db:init-buildings": "tsx src/scripts/initializeBuildingsSchema.ts",
    "db:init-wardens": "tsx src/scripts/initializeWardensSchema.ts",
    "db:init-chief-wardens": "tsx src/scripts/initializeChiefWardensSchema.ts",
    "db:init-matron": "tsx src/scripts/initializeMatronSchema.ts",
    "db:init-students": "tsx src/scripts/initializeStudentsSchema.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@types/multer": "^2.0.0",
    "@types/pdfkit": "^0.17.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.2",
    "@types/nodemailer": "^6.4.20",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^6.16.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "express",
    "nodejs",
    "typescript",
    "prisma",
    "postgres",
    "api"
  ],
  "author": "",
  "license": "MIT"
}
